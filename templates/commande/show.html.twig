{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
<div class="widget-title no-margin" style=" margin-top: 70px">
<ul class="bread-crumb">
			<li>
				<a href="{{ path('app_home') }}" title="">Home</a>
			</li>
			<li>Commerce</li>
			<li>Commandes</li>
		</ul>
		<h4 style ="color: #593A37">Détails commande
		{{ commande.id }}
        </h4>
        <div class="prj-team">
								<ul>
									<li>
{% if commande.id is not empty %}
									 {% if commande.etat != 'Terminée' %}
										<a href="{{ path('app_commande_edit', {'id': commande.id}) }}" class="edit-btn">
											<img src="/TemplateAdmin/images/editer.png" alt="Modifier" style="width: 20px; height: 20px;">
										</a>
									</li>
									{% else %}
								<li>
										{{ include('commande/_delete_form.html.twig') }}
									</li>
								{% endif %}
																	{% endif %}

									</ul>
							</div>
		
	</div>
    <div class="gap no-gap">
		<div class="inner-bg">
			<div class="product-details">
				<div class="gap no-top">
					<div class="product-details-wrapper paddlr70">
						<div class="product-detail paddlr100">
							<div class="row">
								<div class="col-lg-5 col-md-5">
<br><h5 style="color: #87695D; font-weight: bold; font-size: 17px;">
											Montant  :
											<span style="font-weight: normal; color: #87695D;">{{commande.montant }}</span>
										</h5>
										<h5 style="color: #87695D; font-weight: bold; font-size: 17px;">
											Date  :
											<span style="font-weight: normal; color: #87695D;">{{commande.date ?commande.date|date('Y-m-d') : '' }}</span>
										</h5>
                                     
                                        <h5 style="color: #87695D; font-weight: bold; font-size: 17px;">
											Etat  :
											<span style="font-weight: normal; color: #87695D;">{{commande.etat}}</span>
										</h5>
										<br>
	<div class="card" style="box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1); background-color: #f8f9fa;">
											<div class="card-body">

												<h5 class="card-title" style="color: #87695D; font-weight: bold; font-size: 17px;">Informations du panier</h5>
                                                <p class="card-text" style="font-weight: bold; color: #87695D; font-size: 14px;">ID:
															{{pan}}

													</span>
                                                </p>
                                                <h5 class="card-title" style="color: #87695D; font-weight: bold; font-size: 17px;">Client </h5>

												<p class="card-text" style="font-weight: bold; color: #87695D; font-size: 14px;">Nom et Prénom:
													<span style="font-weight: normal; color: #87695D;">{{ commande.panier.client.nom }}
														{{ commande.panier.client.prenom }}</span>
												</p>
  

	</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>
</div>

		<div class="cart-quantity d-flex justify-content-between">
                                        <p> </p>

											<a href="{{ path('app_commande_index') }}" style="color: #593A37; text-decoration: none;">
    <i class="fa fa-arrow-left"></i> Retour à la liste
</a>

										</div>
                                        










{% endblock %}
