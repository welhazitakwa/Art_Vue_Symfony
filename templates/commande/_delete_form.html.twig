{# templates/commande/delete.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Supprimer une commande{% endblock %}

{% block body %}
    {% if commande.etat == 'Termin√©e' %}
        <form id="deleteForm" method="post" action="{{ path('app_commande_delete', {'id': commande.id}) }}">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.id) }}">
            <button type="submit" class="btn btn-danger">Supprimer</button>
        </form>
  
    {% endif %}
{% endblock %}