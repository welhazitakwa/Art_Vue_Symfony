{% extends 'base.html.twig' %}

{% block title %}Exposition{% endblock %}

{% block body %}
    <h1>Exposition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exposition.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ exposition.nom }}</td>
            </tr>
            <tr>
                <th>Datedebut</th>
                <td>{{ exposition.datedebut ? exposition.datedebut|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Datefin</th>
                <td>{{ exposition.datefin ? exposition.datefin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Nbroeuvre</th>
                <td>{{ exposition.nbroeuvre }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_exposition_index') }}">back to list</a>

