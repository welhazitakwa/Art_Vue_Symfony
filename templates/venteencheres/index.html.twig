{% extends 'base.html.twig' %}

{% block title %}Venteencheres index{% endblock %}

{% block body %}
    <h1>Venteencheres index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Datedebut</th>
                <th>Datefin</th>
                <th>Prixdepart</th>
                <th>Statue</th>
                <th>actions</th>
