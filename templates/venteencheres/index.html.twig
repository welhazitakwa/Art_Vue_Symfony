                <td>{{ venteenchere.statue }}</td>
                <td>
                    <a href="{{ path('app_venteencheres_show', {'id': venteenchere.id}) }}">show</a>
                    <a href="{{ path('app_venteencheres_edit', {'id': venteenchere.id}) }}">edit</a>
                </td>
            </tr>
