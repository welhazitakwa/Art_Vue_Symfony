	rel="stylesheet" href="{{ asset('TemplateClient/assets/bootstrap/css/bootstrap.min.css') }}">
	<!-- owl carousel -->
	<link
	rel="stylesheet" href="{{ asset('TemplateClient/assets/css/owl.carousel.css') }}">
	<!-- magnific popup -->
