	rel="stylesheet" href="{{ asset('TemplateClient/assets/css/animate.css') }}">
	<!-- mean menu css -->
	<link
	rel="stylesheet" href="{{ asset('TemplateClient/assets/css/meanmenu.min.css') }}">
	<!-- main style -->
