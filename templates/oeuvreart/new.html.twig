{% extends 'base.html.twig' %}

{% block title %}New Oeuvreart{% endblock %}

{% block body %}
<div class="sub-bar" style=" margin-top: 70px; padding-right: 30px ;padding-left: 20px">
		<div class="sub-title">
			<h4>Oeuvre d'art:</h4>
			<span>Ajouter une nouvelle oeuvre d'art
			</span>
		</div>
		<ul class="bread-crumb">
			<li>
				<a href="{{ path('app_home') }}" title="">Home</a>
			</li>
			<li>Galerie</li>
			<li>Cat√©gorie</li>
			<li>Modifier</li>
		</ul>
	</div>
    <div class="widget-title no-margin" >
			<h4>Ajouter votre oeuvre d'art</h4>
			
	</div>
    <div>
	<div id="form-container">
		{{ form_start(form, {'attr': {'novalidate': 'novalidate', 'enctype': 'multipart/form-data'}}) }}
		<div class="card">
			<div class="card-body" style='background-color:#FEFCF3'>
				<table class="table">
					<tbody>

						<tr>
							<th>{{ form_label(form.idCategorie) }}</th>
							<td>{{ form_widget(form.idCategorie, {'attr': {'class': 'form-control'}}) }}</td>
							<td>
								{% if form_errors(form.idCategorie)|length > 0 %}
									<div class="alert alert-danger">{{ form_errors(form.idCategorie) }}</div>
								{% endif %}
							</td>
						</tr>


						<tr>
							<th>{{ form_label(form.titre) }}</th>
							<td>{{ form_widget(form.titre, {'attr': {'class': 'form-control', 'id': 'form_titre'}}) }}</td>
							<td>
								{% if form_errors(form.titre)|length > 0 %}
									<div class="alert alert-danger">{{ form_errors(form.titre) }}</div>
								{% endif %}
							</td>
						</tr>


						<tr>
							<th>{{ form_label(form.description) }}</th>
							<td>{{ form_widget(form.description) }}</td>
							<td>
								{% if form_errors(form.description)|length > 0 %}
									<div class="alert alert-danger">{{ form_errors(form.description) }}</div>
								{% endif %}
							</td>
						</tr>

						<tr>
							<th>{{ form_label(form.prixvente) }}</th>
							<td>{{ form_widget(form.prixvente, {'attr': {'class': 'form-control', 'id': 'form_prixvente'}}) }}</td>
							<td>
								{% if form_errors(form.prixvente)|length > 0 %}
									<div class="alert alert-danger">{{ form_errors(form.prixvente) }}</div>
								{% endif %}
							</td>
						</tr>

						<tr>
							<th>{{ form_label(form.dateajout) }}</th>
							<td>{{ form_widget(form.dateajout, {'attr': {'class': 'form-control', 'id': 'form_dateajout'}}) }}</td>
							<td>
								{% if form_errors(form.titre)|length > 0 %}
									<div class="alert alert-danger">{{ form_errors(form.dateajout) }}</div>
								{% endif %}
							</td>
						</tr>

						<tr>
							<th>{{ form_label(form.image) }}</th>
							<td>{{ form_widget(form.image, {'attr': {'class': 'form-control', 'id': 'form_image'}}) }}</td>
							<td>
								{% if form_errors(form.image)|length > 0 %}
									<div class="alert alert-danger">{{ form_errors(form.image) }}</div>
								{% endif %}
							</td>
						</tr>
                       

					</tbody>
				</table>
				 <button type="submit" class="admin-form-button">Ajouter</button>
			</div>
		</div>
		{{ form_end(form) }}
	</div>
</div>

   
{% endblock %}
