{% extends 'base.html.twig' %}

{% block title %}Oeuvreart index{% endblock %}

{% block body %}
<div class="sub-bar" style=" margin-top: 70px; padding-right: 30px ;padding-left: 20px">
		<div class="sub-title">
			<h4>Oeuvre d'art:</h4>
			<span>Les oeuvres d'art ajoutées</span>
		</div>
		<ul class="bread-crumb">
			<li>
				<a href="{{ path('app_home') }}" title="">Home</a>
			</li>
			<li>Galerie</li>
			<li>Oeuvre d'art</li>
		</ul>
	</div>

<div class="widget">
		<div class="widget-title no-margin" >
			<h4>Oeuvre d'art</h4>
			<span>Les oeuvre d'art accepté</span>
			<ul class="widget-controls">
				<li title="Ajouter nouveau catégorie" class="refresh-content">
					<a href="{{ path('app_oeuvreart_new') }}"><img src="/TemplateAdmin/images/plus.png" style="width: 25px; height: 25px;" alt="Ajouter Catégorie">
						Ajouter Oeuvre d'art</a>
				</li>
			</ul>
		</div>
    <table class="prj-tbl bordered table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th class="image-column">Image</th>
                <th>Titre</th>
                <th style="width: 300px;">Description</th> <!-- Définir la largeur de la colonne de description -->
                <th>Prixvente</th>
                <th>Status</th>
                <th>Dateajout</th>
                <th>Catégorie</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for oeuvreart in oeuvrearts %}
            <tr>
                <td>{{ oeuvreart.idoeuvreart }}</td>
                <td><img src="/TemplateAdmin/images/peinture.jpg" alt="Image" style="max-width: 80px;"></td>
                <td>{{ oeuvreart.titre }}</td>
                <td>{{ oeuvreart.description }}</td>
                <td>{{ oeuvreart.prixvente }}</td>
                <td>{{ oeuvreart.status }}</td>
                <td>{{ oeuvreart.dateajout ? oeuvreart.dateajout|date('Y-m-d') : '' }}</td>
                <td>{{ oeuvreart.idCategorie.nomcategorie }}</td>
                <td>
							<ul>
                                <li>
									<a href="{{ path('app_oeuvreart_show', {'idoeuvreart': oeuvreart.idoeuvreart}) }}" class="edit-btn">
										<img src="/TemplateAdmin/images/trouve.png" alt="Modifier" style="width: 24px; height: 24px;">
									</a>
								</li>
				
								<li>
									{{ include('oeuvreart/_delete_form.html.twig') }}
								</li>
							</ul>
						</td>
    
            </tr>
        {% else %}
            <tr>
                <td colspan="10">Aucun enregistrement trouvé</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
     </div>
    <a href="{{ path('app_oeuvreart_new') }}">Create new</a>
{% endblock %}
