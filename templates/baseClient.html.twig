<script>
    // Fonction pour basculer entre like et dislike
    function toggleLike(icon, idOeuvreArt) {
    // Vérifier si l'icône est déjà remplie ou vide
    if (icon.classList.contains('far')) {
        // Icône vide, changer en icône remplie et augmenter le nombre de likes
        icon.classList.remove('far');
        icon.classList.add('fas');
        icon.style.color = 'red';

        // Appeler la méthode like du contrôleur Symfony via AJAX
        fetch('/like/' + idOeuvreArt, {
            method: 'POST', // Utiliser la méthode POST pour envoyer des données
            headers: {
                'Content-Type': 'application/json', // Indiquer le type de contenu JSON
            },
            body: JSON.stringify({ idOeuvreArt: idOeuvreArt }), // Convertir l'objet en chaîne JSON
        })
        .then(response => response.text())
        .then(data => {
            console.log(data); // Afficher la réponse du serveur dans la console
        })
        .catch(error => {
            console.error('Une erreur s\'est produite:', error);
        });

        // Mettre à jour le nombre de likes
        var likeCount = document.getElementById('likeCount');
        likeCount.innerText = parseInt(likeCount.innerText) + 1;
    } else {
        // Icône remplie, changer en icône vide et diminuer le nombre de likes
        icon.classList.remove('fas');
        icon.classList.add('far');
        icon.style.color = 'black'; // Couleur par défaut pour une icône vide

        // Supprimer le like (optionnel)

        // Mettre à jour le nombre de likes
        var likeCount = document.getElementById('likeCount');
        likeCount.innerText = parseInt(likeCount.innerText) - 1;
    }
}

</script>
