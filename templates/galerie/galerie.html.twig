{% extends 'baseClient.html.twig' %}

{% block title %}Galerie index
{% endblock %}

{% block body %}
		<!-- breadcrumb-section -->
		<div class="breadcrumb-section breadcrumb-bg">
			<div class="container">
				<div class="row">
					<div class="col-lg-8 offset-lg-2 text-center">
						<div class="breadcrumb-text">
							<p>Vibrant et Inspirant</p>
							<h1>Galerie</h1>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- end breadcrumb section -->

		<!-- products -->
		<div class="product-section mt-150 mb-150">
			<div class="container">

				<div class="row">
					<div class="col-md-12">
						<div class="product-filters">
							<ul>
								<a href="{{ path('app_galerie') }}"><li class="active" >Tous</li></a>
								{% for categorie in categories %}
									<a href="{{ path('app_galerie_by_categorieAff', {'idcategorie': categorie.idcategorie}) }}"><li>{{ categorie.nomcategorie }}</li></a>
								{% endfor %}
							</ul>
						</div>
					</div>
				</div>


				<div class="row product-lists">
					{% for oeuvreart in oeuvrearts %}
						<div class="col-lg-3 col-md-6 text-center">
							<div class="single-product-item">
								<div
									class="product-image">
									<!-- Ajout du bouton "Like" -->
									<button class="like-btn" data-id="{{ oeuvreart.idoeuvreart }}">
										<i class="far fa-heart"></i>
									</button>
									<!-- Affichage du nombre de likes -->
									<span class="like-count">20 Likes</span>
									<a href="{{ path('app_galerie_show', {'idoeuvreart': oeuvreart.idoeuvreart}) }}">
										<img src="{{ asset('oeuvre/' ~ oeuvreart.image) }}" alt="{{ oeuvreart.titre }}" style="width: 150px; height: 200px">
									</a>
								</div>
								<h5>{{ oeuvreart.titre }}</h5>
								<p class="product-price">
									{{ oeuvreart.prixvente }}DT
								</p>


								<a href="{{ path('app_oeuvreart_show', {'idoeuvreart': oeuvreart.idoeuvreart}) }}" class="cart-btn">
									<i class="fas fa-shopping-cart"></i>
									Ajouter au panier
								</a>
							</div>
						</div>
					{% endfor %}
				</div>


				<div class="row">
					<div class="col-lg-12 text-center">
						<div class="pagination-wrap">
							<ul>
								<li><a href="#">Prev</a></li>
								<li><a href="#">1</a></li>
								<li><a class="active" href="#">2</a></li>
								<li><a href="#">3</a></li>
								<li><a href="#">Next</a></li>
							</ul>
						</div>
					</div>
				</div>
			</div>
		</div>
		<!-- end products -->

{% endblock %}



		
