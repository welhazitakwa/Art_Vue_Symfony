      <li>Age<span>{% if app.session.get('userConnected').dateNaissance is not null %}
      {% set aujourdhui = date('now') %}
      {% set age = aujourdhui.diff(app.session.get('userConnected').dateNaissance).y %}
      {{ age }} ans
      {% else %} Non disponible {% endif %}</span></li>
      <li>Genre<span>{{ app.session.get('userConnected').genre }}</span></li>
      <li>Login<span>{{ app.session.get('userConnected').login }}</span></li>
    </ul>
