      <main class="cd__main">
         <div class="profile-page">
  <div class="content">
    <div class="content__cover">
      {# ----------------------------------------------------------------------------------------- #}
      <img  class src="{{ asset('oeuvre/' ~ app.session.get('userConnected').image) }}" alt="Image" style="width: 12rem;
      height: 12rem;
