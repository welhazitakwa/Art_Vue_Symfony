        <a href="{{ path('app_home_client') }}">
        </svg><span style="color:#db9aa2; font-size: 25px;" > <b> Retour </b> </span>
        </a></div>
    
    
    <div class="content__title">
      <h1>{{ app.session.get('userConnected').nom }} {{ app.session.get('userConnected').prenom }}</h1> <b style="color:#00; font-size: 17px;"> Adresse :</b> <span> {{app.session.get('userConnected').adresse}} </span>
