{% extends 'base.html.twig' %}

{% block title %}Evenement - {{ evenement.nom }}{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">{{ evenement.nom }}</h2>
            </div>
            <div class="card-body">
                <dl class="row">
                    <dt class="col-sm-3">Id:</dt>
                    <dd class="col-sm-9">{{ evenement.id }}</dd>

                    <dt class="col-sm-3">Lieu:</dt>
                    <dd class="col-sm-9">{{ evenement.lieu }}</dd>

                    <dt class="col-sm-3">Date:</dt>
                    <dd class="col-sm-9">{{ evenement.date ? evenement.date|date('Y-m-d H:i:s') : '' }}</dd>

                    <dt class="col-sm-3">Price:</dt>
                    <dd class="col-sm-9">{{ evenement.price }}</dd>

                    <dt class="col-sm-3">Capacite:</dt>
                    <dd class="col-sm-9">{{ evenement.capacite }}</dd>
                </dl>
            </div>
            <div class="card-footer">
                <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary">Back to List</a>
                <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary">Edit ✏️</a>
                <span>
                    <button onclick="confirmDelete('{{ path('app_evenement_delete', {'id': evenement.id}) }}')" class="btn btn-danger">Delete 🗑️</button>
                </span>
            </div>
        </div>
    </div>

    <script>
        function confirmDelete(url) {
            if (confirm("Are you sure you want to delete this event?")) {
                window.location.href = url;
            }
        }
    </script>
{% endblock %}
